#include <iostream>
using namespace std;
//SINGLE INHERITANCE 12.1
class student
{
    private:
    int roll_no;
    protected:
    char course[20];
    public:
    void get_rno()
    {
        cout<<"\n Enter roll number";cin>>roll_no;
    }
    void show_rno()
    {
        cout<<"\n ROLL NO:"<<roll_no;
    }
};
class result: public student
{
    private:
    int marks[3];
    public:
    void get_data()
    {
        get_rno();
        cout<<"\n Enter the course:";
        cin.ignore();
        cin.getline(course,10);
        cout<<"\n Enter the marks in three subjects:";
        for(int i=0;i<3;i++)
        {
            cin>>marks[i];
        }
    }
    int total()
    {
        int tot_marks=0;
        for(int i=0;i<3;i++)
        {
            tot_marks+=marks[i];
        }
        return tot_marks;
    }
    void display()
    {
        show_rno();
        cout<<"\n course:"<<course;
        cout<<"\n total marks:"<<total();
    }
};
int main()
{
    result r;
    r.get_data();
    r.display();

    return 0;
}
