#include <iostream>
using namespace std;
//OPERATOR OVERLOADING
//11.3 overloading  with friend fn
class number
{
    private:
    int x;
    public:
    number(){ x=0;}
    number(int n){ x=n;}
    friend number &operator -(number &n){n.x=-n.x;return n;}
    void show_data()
    {
        cout<<"\n x="<<x;
    }
};

int main()
{
    number n(-7);
    n.show_data();
    n=-n;
    n.show_data();
    return 0;
}
